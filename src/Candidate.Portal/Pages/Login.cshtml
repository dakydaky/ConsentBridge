@page
@model Candidate.PortalApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login â€“ Candidate Portal";
}

<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card shadow-sm mt-4">
      <div class="card-body">
        <h3 class="card-title mb-3">Welcome</h3>
        <p class="text-muted">Demo login: any email + password works.</p>
        <form method="post">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input class="form-control" asp-for="Password" type="password" />
          </div>
          <button type="submit" class="btn btn-primary w-100">Continue</button>
        </form>
      </div>
    </div>
  </div>
</div>

