@page
@model MockAgent.ConsoleApp.Pages.Frontpage.LoginModel
@{
    ViewData["Title"] = "Candidate Login";
}

<h2>Candidate Login (Demo)</h2>
<p class="text-muted">Any email + password will log you in as that email for demo purposes.</p>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input class="form-control" asp-for="Password" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a class="btn btn-secondary" asp-page="/Frontpage/Index">Back</a>
  </form>

