@page "/consent/{id:guid}"
@model Gateway.Api.Areas.Consent.Pages.RequestModel
@{
    ViewData["Title"] = "Verify your email";
}

<div class="badge">
    ConsentBridge â€¢ Agent Authorization
</div>

<h1>Verify your email to continue</h1>
<p>
    <strong>@Model.AgentName</strong> is requesting consent to apply to
    <strong>@Model.BoardName</strong> on your behalf.
    <br />
    <small style="opacity:.7">Powered by ConsentBridge</small>
    </p>

@if (!string.IsNullOrEmpty(Model.InfoMessage))
{
    <div class="message">@Model.InfoMessage</div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="message error">@Model.ErrorMessage</div>
}

@if (Model.RequestEntity is not null && Model.ShowVerificationForm)
{
    <form method="post">
        <div class="form-field">
            <label for="code">Enter the 6-digit code we sent</label>
            <input id="code" name="Input.Code" type="text" maxlength="6" autocomplete="one-time-code" required />
        </div>
        <div class="btn-row">
            <button type="submit" class="primary">Verify code</button>
            <button id="btn-resend" type="submit" formaction="?handler=Resend" class="secondary" @(Model.ResendWaitSeconds > 0 ? "disabled" : string.Empty) data-wait="@Model.ResendWaitSeconds">Resend code</button>
        </div>
    </form>

    <script>
      (function(){
        var btn = document.getElementById('btn-resend');
        if(!btn) return;
        var wait = parseInt(btn.getAttribute('data-wait')||'0');
        if (wait > 0) {
          var baseLabel = 'Resend code';
          btn.textContent = baseLabel + ' ('+wait+'s)';
          var iv = setInterval(function(){
            wait -= 1;
            if (wait <= 0) {
              clearInterval(iv);
              btn.disabled = false;
              btn.textContent = baseLabel;
            } else {
              btn.textContent = baseLabel + ' ('+wait+'s)';
            }
          }, 1000);
        }
      })();
    </script>

    <h2>Requested scopes</h2>
    <ul class="scope-list">
        @foreach (var scope in Model.ScopeList)
        {
            <li>@scope</li>
        }
    </ul>
}
else if (Model.RequestEntity is not null)
{
    <p>This consent request is no longer available. If you believe this is a mistake, contact the requesting agent.</p>
}
