@{
    var title = ViewData["Title"] as string ?? "ConsentBridge Consent";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <style>
        :root {
            color-scheme: light dark;
        }
        * {
            box-sizing: border-box;
        }
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            margin: 0;
            padding: 0;
            background: #0b1220;
            color: #f5f8ff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }
        .card {
            width: min(540px, 100%);
            background: rgba(11, 18, 32, 0.88);
            border: 1px solid rgba(90, 122, 255, 0.35);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 30px 90px rgba(19, 28, 63, 0.45);
            backdrop-filter: blur(20px);
        }
        h1, h2 {
            margin-top: 0;
        }
        h1 {
            font-size: 1.75rem;
        }
        h2 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }
        p {
            line-height: 1.6;
        }
        .badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.35rem 0.75rem;
            border-radius: 999px;
            background: rgba(90, 122, 255, 0.18);
            color: #a5b8ff;
            font-size: 0.85rem;
            margin-bottom: 1.5rem;
        }
        .scope-list {
            list-style: none;
            padding: 0;
            margin: 1rem 0 1.5rem;
        }
        .scope-list li {
            padding: 0.75rem 0.85rem;
            margin-bottom: 0.65rem;
            border-radius: 12px;
            background: rgba(146, 170, 255, 0.1);
            border: 1px solid rgba(146, 170, 255, 0.25);
            font-size: 0.95rem;
        }
        .form-field {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-bottom: 1.75rem;
        }
        label {
            font-weight: 600;
            color: #d0d8ff;
        }
        input[type="text"] {
            padding: 0.85rem 1rem;
            border-radius: 12px;
            border: 1px solid rgba(146, 170, 255, 0.35);
            background: rgba(15,23,42,0.5);
            color: inherit;
            font-size: 1rem;
        }
        .btn-row {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }
        button, .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.85rem 1.4rem;
            border-radius: 12px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        button.primary, .btn.primary {
            background: linear-gradient(120deg, #5a7aff, #4260ff);
            color: white;
            box-shadow: 0 14px 30px rgba(66, 96, 255, 0.35);
        }
        button.secondary, .btn.secondary {
            background: rgba(126, 145, 255, 0.12);
            color: #d4dcff;
            border: 1px solid rgba(126, 145, 255, 0.25);
        }
        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            box-shadow: none;
        }
        .message {
            padding: 1rem 1.25rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fdf6c0;
            margin-bottom: 1.5rem;
        }
        .error {
            color: #ff8e8e;
        }
        code.token {
            display: block;
            word-break: break-all;
            padding: 1rem;
            border-radius: 12px;
            background: rgba(12, 18, 38, 0.8);
            border: 1px solid rgba(146, 170, 255, 0.3);
            margin-top: 1rem;
            font-size: 0.95rem;
        }
        footer {
            margin-top: 2rem;
            font-size: 0.8rem;
            color: rgba(165, 184, 255, 0.6);
        }
    </style>
</head>
<body>
    <div class="card">
        @RenderBody()
        <footer>
            ConsentBridge â€¢ A consent-first apply experience
        </footer>
    </div>
</body>
</html>
